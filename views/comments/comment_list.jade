- for (var i = 0; i<d.comments.length; i++)
    div.well
        div.comment-header 
            =d.comments[i].user_name
            span.pull-right.muted
                =d.comments[i].created_date.textVal()
        p
            =d.comments[i].comment
          
        - if(locals.enableCommentDelete)
            div.btn.pull-right
                a(class='btn btn-mini btn-warning destroy', href='/'+context+'/' + d.id+'/comments/'+d.comments[i].id) <i class="icon-trash icon-white"></i> Delete
  