extends ../layout

block content
  legend Your Documents
  
  p
    a(class='btn btn-primary', href='/documents/new') + New Document
  
  
    - for (var d in documents)
     div.well
        div.comments-header
            =documents[d].title
            span.pull-right.muted  
                =documents[d].created_date.textVal()
        p
            !{documents[d].data}
        div.btn-group
            - if(locals.enableCommentDelete)
                a(class='btn btn-mini btn-primary', href='/documents/' + documents[d].id + '/edit') Edit
                a(class='btn btn-mini btn-warning destroy', href='/documents/' + documents[d].id) <i class="icon-trash icon-white"></i> Delete
            a(class='btn btn-mini', href='/documents/' + documents[d].id)
              <i class="icon-zoom-in"></i> View
            a(class='btn btn-mini', href='/documents/' + documents[d].id+'/comments/new')
              <i class="icon-zoom-in"></i> Comment
              